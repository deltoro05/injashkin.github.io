include ../menu/menu
include ../sendMessage/sendMessage
include ../theme/theme

mixin header(options = {})  

  
  - const {logo_title, logo_file, logo_file_mobile, logo_img_alt, email, telegram} = data

  header.header
    .header__content.content            
      .header__logo
        .logo         
          a(href='/' title= logo_title)  
            +icon({name: 'logo', height: '5em', width: '14em'})
        .logo_mobile
          a(href='/' title=logo_title)
            img(src=`/images/${logo_file_mobile}` alt=logo_img_alt)
      +menu()  
      +theme()    
      .header__contacts
        +sendMessage({showText: false})
        .contacts          
          p 
            a(href='https://github.com/injashkin/injashkin.github.io') Github
    