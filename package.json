{
  "name": "jinv",
  "private": false,
  "description": "Блог о веб-разработке",
  "version": "0.1.0",
  "main": "index.js",
  "author": {
    "name": "Igor Yashkin",
    "email": "injashkin@gmail.com",
    "url": "https://jinv.ru"
  },
  "bugs": {
    "url": "https://github.com/injashkin/jinv/issues"
  },
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.7",
    "browser-sync": "^2.27.10",
    "imagemin-cli": "^7.0.0",
    "md-pug-to-html": "^1.2.8",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-preset-env": "^7.8.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^2.8.0"
  },
  "homepage": "https://github.com/injashkin/jinv#readme",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/injashkin/jinv.git"
  },
  "scripts": {
    "clean": "rimraf docs tmp",
    "md-pug-to-html": "md-pug-to-html -i=content -o=docs -t=src/pages/article",
    "pug": "pug --pretty src/pages/*/*.pug -o docs",
    "watch:pug": "pug --pretty -w src/pages/*/*.pug -o docs",
    "build:pug": "pug src/pages/*/*.pug -o docs",
    "sass": "node-sass src/index.scss -o tmp",
    "watch:sass": "node-sass -w src/index.scss -o tmp",
    "watch:svg": "svgo -f src/assets/svg -o tmp/svg && svg-sprite-generate -d tmp/svg -o docs/sprite.svg",
    "build:svg": "svgo -f src/assets/svg -o tmp/svg && svg-sprite-generate -d tmp/svg -o docs/sprite.svg",
    "watch:post": "postcss -w tmp/index.css -d docs -u postcss-preset-env",
    "build:post": "postcss tmp/index.css -d docs -u postcss-preset-env",
    "img": "imagemin src/pages/**/images src/images -o docs/images",
    "watch:serve": "browser-sync docs -w",
    "watch:rollup": "rollup -w -c rollup.config.js",
    "build:rollup": "rollup -c rollup.config.js",
    "copy": "fse copy static docs",
    "dev": "npm-run-all clean md-pug-to-html pug sass img copy -p watch:*",
    "build": "npm-run-all clean md-pug-to-html build:pug sass build:svg build:post img build:rollup copy",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
