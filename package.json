{
  "name": "jinv",
  "private": false,
  "description": "Блог о веб-разработке",
  "version": "0.1.0",
  "main": "index.js",
  "author": {
    "name": "Igor Yashkin",
    "email": "injashkin@gmail.com",
    "url": "https://jinv.ru"
  },
  "bugs": {
    "url": "https://github.com/injashkin/jinv/issues"
  },
  "devDependencies": {
    "@atao60/fse-cli": "^0.1.7",
    "browser-sync": "^2.27.10",
    "cssnano": "^5.1.13",
    "imagemin-cli": "^7.0.0",
    "md-pug-to-html": "^2.2.2",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-preset-env": "^7.8.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^2.8.0"
  },
  "homepage": "https://github.com/injashkin/jinv#readme",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/injashkin/jinv.git"
  },
  "scripts": {
    "h": "postcss --help",
    "dev:clean": "rimraf tmp dev",
    "build:clean": "rimraf docs tmp",
    "dev:md-pug-to-html": "md-pug-to-html content -I -o dev -d src/data -t src/pages/article",
    "md-pug-to-html": "md-pug-to-html content -I -o docs -d src/data -t src/pages/article",
    "pug": "pug -O options.json --pretty src/pages/*/*.pug -o dev",
    "watch:pug": "pug -O options.json --pretty -w src/pages/*/*.pug -o dev",
    "build:pug": "pug -O options.json src/pages/*/*.pug -o docs",
    "sass": "node-sass src/index.scss -o tmp",
    "watch:sass": "node-sass src/index.scss -w -o tmp",
    "build:sass": "node-sass src/index.scss -o tmp",
    "watch:svg": "svgo -f src/assets/svg -o tmp/svg && svg-sprite-generate -d tmp/svg -o dev/sprite.svg",
    "build:svg": "svgo -f src/assets/svg -o tmp/svg && svg-sprite-generate -d tmp/svg -o docs/sprite.svg",
    "watch:post": "postcss tmp/index.css -o dev/index.tui.css -w",
    "build:post": "postcss tmp/index.css -o docs/index.tui.css",
    "dev:img1": "imagemin src/pages/**/images src/images -o dev/images",
    "dev:img2": "imagemin src/assets/icons -o dev/images/icons",
    "img1": "imagemin src/pages/**/images src/images -o docs/images",
    "img2": "imagemin src/assets/icons -o docs/images/icons",
    "watch:serve": "browser-sync dev -w",
    "watch:rollup": "rollup -w -c rollup.config.dev.js",
    "build:rollup": "rollup -c rollup.config.js",
    "copy": "fse copy static docs",
    "dev": "npm-run-all dev:clean dev:md-pug-to-html dev:img1 dev:img2 pug sass -p watch:*",
    "build": "npm-run-all build:clean md-pug-to-html build:pug build:sass build:svg build:post img1 img2 build:rollup copy"
  }
}
